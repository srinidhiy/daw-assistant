{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "outDir": "dist/main",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/main/**/*", "src/preload.ts", "src/shared/**/*"]
}
